global:
  scrape_interval: 5s

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9100']


  - job_name: '{{ groups['validators'][0] -}}_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ["{{ groups['validators'][0] -}}:9615"]
