global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9100']

  - job_name: 'robonomics_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: 
          {% set lst=[] -%}
          {% for host in groups['do_robonomics'] -%}
              {% if inventory_hostname != host -%}
                {% set lst = lst.append(host + ':9615') -%}
              {% endif -%}
          {% endfor -%}
          {{ lst | to_nice_json }}